<!-- Loop over each object in the projects array -->
{{#each ideas as |idea| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/idea/{{idea.id}}">{{idea.name}}</a>
    </h2>
    <p>Created by {{idea.user.name}} on {{format_date idea.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{idea.description}}
    </p>
  </div>
</div>
{{/each}}
